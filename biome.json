{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "organizeImports": { "enabled": true },
  "formatter": {
    "enabled": true,
    "lineWidth": 80,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "nursery": {
        "useSortedClasses": "warn",
        "noUnusedFunctionParameters": "warn"
      }
    }
  },
  "files": {
    "ignore": [
      "**/*.config.js",
      "**/*.config.cjs",
      "dist",
      "pnpm-lock.yaml",
      "**/build",
      "**/public/build",
      "**/playwright-report",
      "**/storybook-static",
      "**/node_modules/**",
      "**/dist/**",
      "examples/**/*"
    ]
  }
}
